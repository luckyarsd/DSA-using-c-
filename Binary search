// WAP for a simple Binary searh program.
# include <iostream>
using namespace std;

int  main()
{
    int arr[5] = {1,3,6,8,9};
    int size = sizeof(arr)/4;
    cout<<"Size of array : "<<size<<endl;
    
    int left = 0 , right = size - 1;
    int target = 8 , index = -1;
    while(left<=right)
    {
        int mid = (left+right)/2;
        if(arr[mid] == target)
        {
            index = mid;
            break;
        }
        else if(arr[mid] < target)
        {
            // Move right
            left = mid + 1;
        }
        else
        {
            // Move left
            right = mid - 1;
        }
    }
    
    cout<<"Index = "<<index;
    return 0;
}
